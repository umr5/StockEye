<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>StockEye</title>
    </head>
    <body>
        <form action="/" method="get"><input type="submit" value="To Front" /></form>
        <text>Username: <%=currentuser.displayName%></text><br>
        <text>Email: <%=currentuser.email%></text><br>
        <text>uid: <%=currentuser.uid%></text><br><br>
        <% for( let i = 0; i < investments.length; i++ ) { %>
            <text>>><%= investments[i].stock %></text>
            <text>current profit: $<%=profit_function(investments[i], stock_arr[i])%></text><br>
        <% } %>
        <br><br><br><br>
        <text>Your Brokers</text>
        <% brokers.forEach((broker)=>{%>
            <br>
            <text><%=broker.UID%></text><br>
            <text><%=broker.email%></text><br>
            <text><%=broker.institution%></text><br>
            <text><%=broker.username%></text><br>
            <form action="/unsubscribe/<%=broker.UID%>" method="get"><button type="submit">unsubscribe</button></form>
            <br>
        <%}) %>
    </body>
</html>
