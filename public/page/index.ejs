<head>
    <meta charset="UTF-8">
    <title>StockEye</title>
</head>
<body>
    <Text>welcome to the main page</Text>
    <% if(currentuser == null){%>
        <form action="./login" method="get"><input type="submit" value="login" /></form>
    <%}else{%>
        <form action="./account/<%=currentuser.uid%>" method="get"><input type="submit" value="My Account" /></form>
        <form action="./signOut" method="get"><input type="submit" value="Sign Out" /></form>
    <%}%>
    <!--This is a list containing all the stocks -->
    <ul>
        <!--uses ejs to loop through the Stocks, which are passed here from tbe router-->
        <% Stocks.forEach(stock => {%>
            <text>>><%= stock.Name %></text>
            <%stock.Array.forEach(int => {%>
                <li>
                    <text><%= int %></text>
                </li>
            <%})%>
            <!--dynamic route, route depends on what stock you invest in-->
            <form action='/buy/<%= stock.Name %> ' method="post">
                <button type="submit" class="submit-btn">Buy</button>
                <input id="amount" name="amount" type="text">
            </form>
            <form action="/sell/<%= stock.Name %> " method="post">
                <button type="submit" class="submit-btn">Sell</button>
            </form>
        <%}); %>
   </ul>
</body>